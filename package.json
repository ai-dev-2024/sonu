{
  "name": "sonu",
  "version": "3.5.0",
  "description": "Professional offline voice typing application powered by Whisper AI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "fetch-icon": "node scripts/fetch-tray-icon.js",
    "preview": "python -m http.server 8000"
  },
  "author": "1111MK1111",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/1111MK1111/sonu.git"
  },
  "keywords": [
    "voice-typing",
    "dictation",
    "whisper",
    "offline",
    "electron",
    "speech-to-text"
  ],
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "follow-redirects": "^1.15.11",
    "robotjs": "^0.6.0"
  },
  "build": {
    "appId": "com.offlinevoicetyping.app",
    "productName": "Offline Voice Typing",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!**/*.md",
      "whisper_service.py"
    ]
  }
}
