{
  "name": "sonu",
  "version": "3.5.3",
  "description": "Professional offline voice typing application powered by Whisper AI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "cd tests && npm run test",
    "test:e2e": "cd tests && npm run test:e2e",
    "fetch-icon": "node scripts/fetch-tray-icon.js",
    "preview": "python -m http.server 8000",
    "screenshots": "electron scripts/take-screenshots-for-github.js",
    "auto-screenshots": "node auto_screenshot.js",
    "showcase": "electron scripts/run-showcase.js",
    "banner": "node scripts/generate-banner.js"
  },
  "author": "1111MK1111",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/1111MK1111/sonu.git"
  },
  "keywords": [
    "voice-typing",
    "dictation",
    "whisper",
    "offline",
    "electron",
    "speech-to-text"
  ],
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.0",
    "playwright": "^1.56.1",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "electron-updater": "^6.1.8",
    "follow-redirects": "^1.15.11",
    "robotjs": "^0.6.0"
  },
  "build": {
    "appId": "com.sonu.app",
    "productName": "Sonu Voice Typing",
    "publish": {
      "provider": "github",
      "owner": "ai-dev-2024",
      "repo": "sonu"
    },
    "win": {
      "target": "nsis",
      "sign": null
    },
    "mac": {
      "target": "dmg",
      "identity": null
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!**/*.md",
      "whisper_service.py"
    ]
  }
}