{
  "name": "sonu-tests",
  "version": "1.0.0",
  "description": "Testing suite for SONU voice typing application",
  "main": "index.js",
  "scripts": {
    "test": "jest --json --outputFile=jest-output.json",
    "test:watch": "jest --watch --json --outputFile=jest-output.json",
    "test:coverage": "jest --coverage --json --outputFile=jest-output.json",
    "test:unit": "jest tests/unit --json --outputFile=jest-unit.json",
    "test:integration": "jest tests/integration --json --outputFile=jest-integration.json",
    "test:model-download": "jest tests/integration/model_download.test.js --json --outputFile=jest-integration.json",
    "test:typing": "jest tests/integration/typing.test.js --json --outputFile=jest-integration.json",
    "test:e2e": "jest tests/e2e --json --outputFile=jest-e2e.json --runInBand --maxWorkers=1 --testTimeout=120000 --globalTeardown=tests/e2e/global-teardown.js",
    "test:electron": "jest tests/electron",
    "test:python": "python -m pytest tests/python",
    "test:all": "npm run test:unit; npm run test:integration; npm run test:python; npm run test:e2e"
  },
  "devDependencies": {
    "@electron/remote": "^2.0.8",
    "@types/jest": "^29.5.0",
    "electron": "^28.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-environment-node": "^29.5.0",
    "playwright": "^1.40.0",
    "spectron": "^19.0.0"
  },
  "dependencies": {
    "fs-extra": "^11.1.0",
    "path": "^0.12.7"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup.js"
    ]
  }
}
